
{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/uv9nci01hx5niurqaw6mllzkhbo7vbmcuaojaphu0bf9h1iy/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
    tinymce.init({
      selector: '#prodDes',
      plugins: 'paste image link autolink lists table media',
      menubar: false,
      toolbar: [' undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright| forecolor backcolor| table link image media'],
       entity_encoding : "raw",
    });
</script>
{{/section}}
<div class="container py-5">
    <h1 class="text-center mb-4"> 
        <strong>ĐĂNG SẢN PHẨM</strong>
        </h1>
    <div class="row">
        <div class="col-md-10 mx-auto">
            <form id="frmPostProduct" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label ><strong> Tên sản phẩm</strong></label>
                        <input type="text" class="form-control" id="txtProdName" name ="prodName" autofocus required>
                    </div>
                    <div class="col-sm-6">
                        <label ><strong> Danh mục</strong></label>
                        <select class="browser-default custom-select" name="prodType" required>
                            <option disabled selected="" >Chọn danh mục cho sản phẩm</option>
                            {{#each ./lv2Categories }}
                            <option value="{{typeID}}">{{typeName}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label ><strong> Giá khởi điểm</strong></label>
                        <input type="number" class="form-control" id="txtPrice" name="curPrice" required >
                    </div>
                    <div class="col-sm-6">
                        <label><strong> Giá mua ngay</strong> </label>
                        <input type="number" class="form-control" id="txtBuyNowPrice" name="buyNowPrice" required >
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label><strong> Bước giá</strong> </label>
                        <input type="number" class="form-control" id="step" name="step" required>
                    </div>
                    <div class="col-sm-3">
                        <label><strong> Ngày kết thúc</strong></label>
                        <input type="date" class="form-control" id="date" name="date"required>
                    </div>
                     <div class="col-sm-3">
                        <label><strong> Giờ kết thúc </strong></label>
                        <input type="time" class="form-control" id="time" name="time" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label><strong>Hình ảnh</strong></label>
                        <input type="file" id="fileUpload" name="fileUpload" multiple>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label><strong> Mô tả </strong></label>
                        <textarea name="des" id="prodDes" class="form-control" style="min-width: 100%" rows=10 ></textarea>
                    </div>
                </div>
                <button type="text" class="btn btn-light px-4 float-right" >Đăng</button>
            </form>
        </div>
    </div>
</div>

