{{#section "js"}}
  <script>
    $('#frmAddCate').on('submit',function(e){ e.preventDefault(); const catName
    = $('#txtCatName').val(); if (!catName){ alert("Vui lòng điền tên danh mục!"); return; }
    $.getJSON(`/admin/categories/is-available?catName=${catName}`,function(data){
    if (data===false){ alert('Danh mục đã tồn tại'); return; } else { alert(`Đã
    thêm danh mục ${catName}`); $('#frmAddCate').off('submit').submit(); } });
    });
  </script>
  <script>
    $('.deleteUserBtn').on('click', function (e){ const uID =
    $(this).data('id'); alert(`Đã xóa người dùng ${uID}`);
    $("#txtDelUserID").val(uID); $("#frmDelUser").submit(); } )
  </script>
{{/section}}

<a
  class="mx-4"
  id="menuBtn"
  class=""
  onclick="displayMenu()"
  href="#"
  role="button"
>
  <i class="fa fa-list fa-2x" aria-hidden="true"></i>
</a>
<h3 class="my-4 adminTitle">QUẢN LÝ DANH MỤC</h3>
{{! thêm  }}
<div class="d-flex flex-row-reverse">
  <a
    class="admin_addBtn"
    href="#"
    data-toggle="modal"
    data-target="#modalAddCategory"
  >
    <div class="adminBtnText">THÊM DANH MỤC</div>
  </a></div>
{{! table  }}
{{#each this.cateList}}
  <div class="table-responsive">
    <table class="table adminTable">
      <thead class="adminTable_header">
        <tr>
          <th scope="col">
            <div class="d-flex justify-content-between">
              <div>{{level1}}</div>
              <div>
                <a
                  name=""
                  id=""
                  class="btn btn-light adminTable_deleteBtn adminCategory_btn mx-1"
                  href="#"
                  role="button"
                  data-toggle="modal"
                  data-target="#modalAddSmallCategory"
                >
                  <i class="fa fa-plus" aria-hidden="true"></i></a>
                <a
                  name=""
                  id=""
                  class="btn btn-light adminTable_deleteBtn adminCategory_btn mx-1"
                  href="#"
                  role="button"
                >
                  <i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a
                  name=""
                  id=""
                  class="btn btn-light adminTable_deleteBtn adminCategory_btn mx-1"
                  href="#"
                  role="button"
                >
                  <i class="fa fa-trash" aria-hidden="true"></i></a>
              </div>
            </div>
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each level2}}
          <tr>
            <td class="text-left px-5">
              <div class="d-flex justify-content-between">
                <div>{{typeName}}</div>
                <div>
                  <a
                    name=""
                    id=""
                    class="btn btn-light adminTable_deleteBtn adminSmallCategory_btn mx-1"
                    href="#"
                    role="button"
                  >
                    <i class="fa fa-pencil" aria-hidden="true"></i></a>
                  <a
                    name=""
                    id=""
                    class="btn btn-light adminTable_deleteBtn adminSmallCategory_btn mx-1"
                    href="#"
                    role="button"
                  >
                    <i class="fa fa-trash" aria-hidden="true"></i></a>
                </div>
              </div></td>
          </tr>
        {{/each}}

      </tbody>
    </table></div>
{{/each}}

<!-- Modal thêm danh mục lớn -->
<div
  class="modal fade"
  id="modalAddCategory"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thêm danh mục</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="frmAddCate" method="post" class="form">
          <label for=""></label>
          <input
            type="text"
            class="form-control"
            id="txtCatName"
            name="catName"
            aria-describedby="helpId"
            placeholder="Danh mục mới"
          />
          <button
            type="submit"
            class="btn btn-warning text-light mt-4 addCategory_btnSave"
          >Lưu</button>
        </form>
      </div>

    </div>
  </div>
</div>

<!-- Modal thêm danh mục con -->
<div
  class="modal fade"
  id="modalAddSmallCategory"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Điện tử</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for=""></label>
          <input
            type="text"
            class="form-control"
            name=""
            id=""
            aria-describedby="helpId"
            placeholder="Danh mục mới"
          />

        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Hủy</button>
        <button
          type="button"
          class="btn btn-light addCategory_btnSave"
        >Lưu</button>
      </div>
    </div>
  </div>
</div>

{{! pagination  }}
