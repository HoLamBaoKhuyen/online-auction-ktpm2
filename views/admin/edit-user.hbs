<a
  class="mx-4"
  id="menuBtn"
  class=""
  onclick="displayMenu()"
  href="#"
  role="button"
>
  <i class="fa fa-list fa-2x" aria-hidden="true"></i>
</a>
<h3 class="my-4 adminTitle">QUẢN LÝ NGƯỜI DÙNG</h3>

<form id="frmEditUser" method="post" class="form">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="input-container ic1">
        <input
          id="txtEmail"
          class="input"
          type="text"
          placeholder=" "
          value={{this.user.email}}
          name="email"
          readonly
        />
        <div class="cut"></div>
        <label for="txtEmail" class="placeholder">Email</label>
      </div>
      <div class="input-container ic1">
        <input
          id="txtFirstName"
          class="input"
          type="text"
          placeholder=" "
          value="{{this.user.firstName}}"
          name="firstName"
        />
        <div class="cut"></div>
        <label for="txtFirstName" class="placeholder">Tên</label>
      </div>
      <div class="input-container ic1">
        <input
          id="txtAddress"
          class="input"
          type="text"
          placeholder=" "
          value={{this.user.address}}
          name="address"
        />
        <div class="cut"></div>
        <label for="txtAddress" class="placeholder">Địa chỉ</label>
      </div>
      <div class="input-container ic1">
        <div class="cut"></div>
        {{! <label for="typeUser" class="placeholder">Loại tài khoản</label> }}
        <select id="typeUser" class="typeUser" name="userType">
          <option
            value="{{this.user.userType}}"
            disabled
            selected
          >{{this.user.userType}}</option>
          <option value="admin">Admin</option>
          <option value="bidder">Bidder</option>
          <option value="seller">Seller</option></select>
        <div class="cut"></div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6">

      <div class="input-container ic2">
        <!-- Date input -->
        <input
          class="form-control input"
          id="txtDOB"
          name="dob"
          type="date"
          placeholder=" "
          value="{{formatTime this.user.dob "YYYY-MM-DD"}}"
          name="dob"
        />
        <div class="cut"></div>
        <label for="dob" class="placeholder">Ngày sinh</label>
      </div>
      <div class="input-container ic2">
        <input
          id="txtLastName"
          class="input"
          type="text"
          placeholder=" "
          value="{{this.user.lastName}}"
          name="lastName"
        />
        <div class="cut"></div>
        <label for="txtLastName" class="placeholder">Họ</label>
      </div>
      <div class="input-container ic2">
        <input
          id="txtHotline"
          class="input"
          type="text"
          placeholder=" "
          value={{this.user.hotline}}
          name="hotline"
        />
        <div class="cut"></div>
        <label for="txtHotline" class="placeholder">Điện thoại</label>
      </div>

    </div></div>
  <button type="text" class="submit">CHỈNH SỬA</button>
</form>